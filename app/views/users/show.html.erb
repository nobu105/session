<div class="container">
  <div class="row">
  	<h2><%= current_user.username %>さんのマイページ</h2>
  </div>

  	<!-- 会員情報　-->
  	<div class="col-xs-1"></div>
  	<div class="col-xs-5">
  	  <figure class="box">
  	  	<%= attachment_image_tag @user, :image, size: "350x350", fallback: "no_image.jpg" %>
  	  </figure>
  	</div>
  	<div class="col-xs-5">
  	  <%= link_to "編集", edit_user_path, class: "btn btn-danger pull-right" %>
  	  <br><br>
  	  <table class="table">
  	  	<tr>
  	  	  <th><h4>ユーザーネーム</h4></th>
  	  	  <td><%= current_user.username %></td>
  	  	</tr>

  	  	<tr>
  	  	  <th><h4>メールアドレス</h4></th>
  	  	  <td><%= current_user.email %></td>
  	  	</tr>

  	  </table>
  	</div>
</div>
