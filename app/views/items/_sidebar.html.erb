<div class="col-lg-3 container sidebar well well-sm">
  <div class="sidebar-content">
    <div class="row">
      <span class="col-xs-4">
  	    <%= attachment_image_tag current_user, :image, :fill, 40, 40, format: 'jpg',fallback: "no_image.jpg" ,size:'50x50'%>
  	  </span>
  	  <span class="col-xs-8">
  	  	<%= link_to "プロフィール編集", edit_user_path(current_user) %>
  	  </span>
  	</div>
  	<%= current_user.username %><br>
  	<div class="row">
      <span class="col-xs-4">
        投稿数<br>
        <%= current_user.items.count %>
      </span>
      <span class="col-xs-4">
        フォロー<br>
        <%=  %>
      </span>
      <span class="col-xs-4">
        フォロワー<br>
        <%=  %>
      </span>
    </div>
    <div class="row">
    <%= form_for(@item) do |f|%>
      <div class="form-group">
  	    <%= f.label :タイトル %>
        <%= f.text_field :title , class:"form-control" %>
        <%= f.label :コメント %>
        <%= f.text_field :text , class:"form-control" %>
        <%= f.label :ファイル %>
        <%= f.file_field :file , class:"form-control" %>
      </div>
      <div>
        <%= f.submit "投稿" %>
      </div>
    <% end %>
    </div>
  </div>
</div>