<%= form_for(@item) do |f|%>
  <div class="form-group">
  	<%= f.label :タイトル %>
    <%= f.text_field :title , class:"form-control" %>
    <%= f.label :コメント %>
    <%= f.text_field :text , class:"form-control" %>
    <%= f.label :ファイル %>
    <%= f.file_field :file , class:"form-control" %>
  </div>
  <div>
    <%= f.submit "投稿" %>
  </div>
<% end %>
