<%= render 'layouts/logo' %>
<div class="container">
  <div class="row">
  	<%= render 'items/sidebar' %>
    <div class="main">
  	<div class="col-lg-5">
      <% if @search_items %>
  	  <% @search_items.each do |item|%>
  	    <div class="item-panel">
  	      <div class="item-image">
  	      	<div class="row">
  	      	  <span class="col-xs-3">
  	            <%= link_to user_path(item.user.id) do %>
                <%= attachment_image_tag item.user, :image, :fill, 80, 80, format: 'jpg',fallback: "no_image.jpg" ,size:'80x80'%>
                <% end %>
              </span>
              <span class="col-xs-8">
                <h5 class="item-name"><%= item.user.username %></h5>
              </span>
            </div>
          </div>
          <div class="item-title">
          	<div class="row">
  	      	  <span class="col-xs-3">
  	      	  </span>
  	      	  <span class="col-xs-9">
                <%= link_to item.title, item_path(item) %><br>
              </span>
            </div>
          </div><br>
          <div class="item-text">
          	<div class="row">
  	      	  <span class="col-xs-3">
  	      	  </span>
  	      	  <span class="col-xs-9">
                <%= item.text %><br>
              </span>
            </div>
          </div><br>
          <div class="item-link">
          	<div class="row">
          	  <span class="col-xs-3">
  	      	  </span>
  	      	  <span class="col-xs-2">
  	      	  	<i class="far fa-comments"></i> <%= item.comments.count %>
  	      	  </span>
  	      	  <span class="col-xs-2" id="likes_buttons_<%= item.id %>">
                <!-- <td> -->
                  <%= render partial: "likes/like", locals: { item: item } %>
                <!-- </td> -->
              </span>
              <span class="col-xs-2">
                <%= link_to download_item_path(item), "data-confirm" => "音源をダウンロードしますか？" do %>
                  <i class="fas fa-arrow-alt-circle-down"></i>
                <% end %>
              </span>
              <span class="col-xs-2">
                <%= link_to item_path(item), method: :delete, "data-confirm" => "本当に削除しますか？" do %>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              </span>
            </div><br>
            <div class="row">
              <span class="col-xs-3">
              </span>
              <span class="col-xs-9">
                <% item.tags.each do |tag| %>
                  <span class="badge badge-success">
                    <%= tag.name %>
                    <%= audio_tag(item.file) %>
                  </span>
                <% end %>
              </span>
            </div>
          </div>
  	  	</div>
      <% end %>
  	  <% end %>
    </div>
    <%= render 'items/search' %>
  </div>
</div>

