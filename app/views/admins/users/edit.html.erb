<div class="container">
    <div class="col-xs-10">
      <h2><i class="fas fa-user-edit"></i> 会員情報編集</h2>
    </div>

    <%= form_for(@user, url:admins_user_path, method: :patch) do |f| %>
    <div class='form-group row'>
      <div class='col-lg-4'>
        <h5><%= f.label :会員ステータス %></h5>
      </div>
      <div class='col-lg-2'>
        <% if @user.is_status? %>
          <td><span class="badge" style="background:#d72238;">退会済み</span></td>
        <% else %>
          <td><span class="badge" style="background:#8bce9a;">有効会員</span></td>
        <% end %>
      </div>
    </div>

    <div class='form-group row'>
      <div class='col-lg-4'>
        <h5><%= f.label :名前 %></h5>
      </div>
      <div class='col-lg-8'>
        <span style='display: inline-block;'>
          <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'form-control' %>
        </span>
      </div>
    </div>
    
    <div class='form-group row'>
      <div class='col-lg-4'>
        <h5><%= f.label :ユーザーネーム %></h5>
      </div>
      <div class='col-lg-8'>
        <span style='display: inline-block;'>
          <%= f.text_field :username, autofocus: true, autocomplete: 'username', class: 'form-control' %>
        </span>
      </div>
    </div>

    <div class='form-group row'>
      <div class='col-lg-4'>
        <h5><%= f.label :メールアドレス %></h5>
      </div>
      <div class='col-lg-4'>
        <%= f.text_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
      </div>
    </div>



    <div class="form-group row">
      <div class="col-lg-4 offset-lg-8">
        <%= f.submit '編集内容を保存する', class:'btn btn-success' %>
      </div>
    </div>
    <% end %>
</div>
