<%= render 'layouts/header' %>
<div class="wrap-video">
  <%= video_tag "top.mp4", autoplay: true, muted: true, loop:true, playsinline: true %>
</div>


<div class="container">
  <div class="row">
    <div class="signin-box">
      <span class="form-text">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="col-sm-10">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %><br>
          </div>

          <div class="col-sm-10">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autofocus: true,autocomplete: "current-password", class: 'form-control' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="col-sm-10">
              <%= f.check_box :remember_me %>
              <%= f.label :パスワードを記憶 %>
            </div>
          <% end %>
          <div class="col-sm-10"><br>
            <%= f.submit "ログイン", class: "btn btn-warning btn-block mt-5" %><br>
          </div>
        <% end %>
        <div class="col-sm-10">
          <%= render "devise/shared/links" %>
        </div>
      </span>
    </div>
  </div>
</div>
